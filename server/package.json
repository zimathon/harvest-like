{
  "name": "harvest-like-server",
  "version": "1.0.0",
  "description": "Backend for Harvest-like time tracking application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npx tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "create-admin": "ts-node-dev --transpile-only src/scripts/createAdmin.ts",
    "create-admin:firestore": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8090 npx tsx src/scripts/createAdminFirestore.ts",
    "list-users": "npx tsx src/scripts/listUsers.ts",
    "test:firestore": "FIRESTORE_EMULATOR_HOST=localhost:8090 NODE_ENV=development node dist/test-firestore.js",
    "migrate:firestore": "FIRESTORE_EMULATOR_HOST=localhost:8090 NODE_ENV=development npx tsx src/scripts/migrate-to-firestore.ts",
    "test:firestore:features": "FIRESTORE_EMULATOR_HOST=localhost:8090 NODE_ENV=development npx ts-node src/scripts/test-firestore-features.ts",
    "firestore:start": "firebase emulators:start --only firestore --import=./.firestore-data --export-on-exit",
    "firestore:clear": "rm -rf ./.firestore-data && echo 'âœ… Firestore data cleared successfully!'"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.2",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.9",
    "axios": "^1.11.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
