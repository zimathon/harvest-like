{
  "name": "harvest-like",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "firebase emulators:start --only firestore,auth --config firebase.local.json",
    "dev:staging": "NODE_ENV=staging vite",
    "build": "tsc && vite build",
    "build:staging": "NODE_ENV=staging tsc && vite build",
    "build:production": "NODE_ENV=production tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "dev:all": "concurrently \"npm run dev\" \"cd server && npm run dev\"",
    "dev:emulator": "concurrently -n \"firestore,backend,frontend\" -c \"yellow,blue,green\" --kill-others-on-fail \"cd server && npm run firestore:start\" \"sleep 3 && cd server && FIRESTORE_EMULATOR_HOST=localhost:8090 USE_FIRESTORE_EMULATOR=true npm run dev\" \"sleep 3 && npm run dev\"",
    "dev:firestore": "concurrently -n \"backend,frontend\" -c \"blue,green\" --kill-others-on-fail \"cd server && USE_FIRESTORE_EMULATOR=false PROJECT_ID=harvest-a82c0 npm run dev\" \"npm run dev\"",
    "stop:all": "pkill -f 'firestore' || true; pkill -f 'tsx watch' || true; pkill -f 'vite' || true; pkill -f 'log-monitor-agent' || true; lsof -ti:8090,5001,5173,4000 | xargs kill -9 2>/dev/null || true",
    "monitor": "node scripts/log-monitor-agent.js",
    "monitor:backend": "node scripts/log-monitor-agent.js backend",
    "monitor:frontend": "node scripts/log-monitor-agent.js frontend",
    "dev:monitored": "node scripts/start-with-monitor.js firestore",
    "dev:all:monitored": "node scripts/start-with-monitor.js all",
    "start:monitored": "node scripts/start-with-monitor.js",
    "generate:types": "openapi-typescript api/openapi.yaml -o src/types/api.generated.ts",
    "generate:types:watch": "nodemon --watch api/openapi.yaml --exec npm run generate:types"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "axios": "^1.8.4",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "openapi-typescript": "^7.8.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
